<%= form_with(model: @user_editable_text, url: user_editable_texts_path, method: :post, class: "mb-4") do |form| %>
  <div class="flex flex-col mb-4">
    <%= form.label :content, class: "mb-2 text-lg font-bold" %>
    <%= form.text_area :content, rows: 4, class: "px-4 py-2 border border-gray-300 rounded-lg" %>
  </div>
  <div>
    <%= form.submit 'Query', class: "px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600" %>
  </div>
<% end %>

<hr class="my-8">

<% if @user_editable_text %>
  <h2 class="text-2xl font-bold mb-4">Persisted Text:</h2>
  <p class="text-lg"><%= @user_editable_text.content %></p>
<% else %>
  <p class="text-lg">No persisted text available.</p>
<% end %>
